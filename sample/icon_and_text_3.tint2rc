# Taskbar
taskbar_mode = single_monitor
taskbar_padding = 0 0 2
taskbar_background_id = 0

# Tasks
task_icon = 1
task_text = 1
task_centered = 1
task_maximum_size = 140 40
task_padding = 5 3
task_font = sans 10

# Task inactive
task_font_color = #000000 100
task_icon_asb = 80 0 0
